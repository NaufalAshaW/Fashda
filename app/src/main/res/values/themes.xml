<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fashda" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto_reg</item>
    </style>
    <style name="Theme.Fashda.FontBold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Theme.Fashda.FontRegular">
        <item name="fontFamily">@font/roboto_reg</item>
    </style>

    <style name="Theme.Fashda.TextBold12" parent="Theme.Fashda.FontBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Fashda.TextBold14" parent="Theme.Fashda.FontBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Fashda.TextBold16" parent="Theme.Fashda.FontBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Fashda.TextBold24" parent="Theme.Fashda.FontBold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Fashda.TextRegular12" parent="Theme.Fashda.FontRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Fashda.TextRegular14" parent="Theme.Fashda.FontRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Fashda.TextRegular16" parent="Theme.Fashda.FontRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Fashda.ShapeApperanceOverlay.PlaceThumbnail" parent="">
        <item name="cornerSize">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#f2f2f2</item>
    </style>

    <style name="Theme.Fashda.TextApperance.ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>